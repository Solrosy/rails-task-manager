<div class="container w-75">
  <h1>Edit a task</h1>
  <%= form_with model: @task do |f| %>
  <%= f.label :title, class: "form-label" %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :details, class: "form-label" %>
  <%= f.text_area :details, class: "form-control" %>
  <%= f.check_box :completed, class: "form-check-input" %>
  <%= f.label :completed, "Completed", class: "form-check-label" %>
  <div>
    <%= f.submit class: "btn btn-primary mt-3" %>
  </div>
  <% end %>
  <div class="border-top my-3">
    <div class="my-3">
      <%= link_to tasks_path do %>
        <i class="fa-regular fa-hand-point-left"></i> Back to list
      <% end %>
    </div>
  </div>
</div>
